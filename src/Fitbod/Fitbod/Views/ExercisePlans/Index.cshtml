@model IEnumerable<Fitbod.Models.ExercisePlan>

@{
    ViewData["Title"] = "Index";
}

<h1>Dine Planer</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Opret ny plan</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Plan:
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a class="btn btn-success btn-sm" asp-action="EntryCreate" asp-route-id="@item.ExercisePlanId">Tilføj Øvelse</a>
                    <a class="btn btn-primary btn-sm" asp-action="EntryIndex" asp-route-id="@item.ExercisePlanId">Åben Plan</a> |
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ExercisePlanId">Slet Plan</a>
            </td>
        </tr>
}
    </tbody>
</table>
