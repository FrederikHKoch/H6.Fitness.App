@model IEnumerable<Fitbod.Models.WeekDay>

@{
    ViewData["Title"] = "Index";
}

<h1>Mad Plan</h1>

@{
    if (User.IsInRole("Admin"))
    {
        <p>
            <a asp-action="Create">Ny madplan</a>
        </p>
        <p>
            <a asp-area="" asp-controller="Dish" asp-action="Index">Retter</a>
        </p>
    }
}

@foreach (var item in Model) {
    <tr>
        <div class="row_custom">
            <div class="column_custom" style="background-color:white;">
                <h2>@Html.DisplayFor(modelItem => item.Day)</h2>
                <a href="@Html.DisplayFor(modelItem => item.Dish.Url)">@Html.DisplayFor(modelItem => item.Dish.Name)</a>
                <br/>
                @{
                    if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.WeekDayId">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.WeekDayId">Delete</a>       
                    }
                }
            </div>
            <br/>
        </div>
    </tr>
}