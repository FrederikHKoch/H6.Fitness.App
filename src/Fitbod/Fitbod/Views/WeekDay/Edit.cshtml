@using Fitbod.Data
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Fitbod.Models.WeekDay

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>WeekDay</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WeekDayId" />
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <select asp-for="Day" class="form-control" asp-items="Html.GetEnumSelectList<WeekDayEnum>()"></select>
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DishId" class="control-label"></label>
                <select asp-for="DishId" class="form-control" asp-items="ViewBag.DishId"></select>
                <span asp-validation-for="DishId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

