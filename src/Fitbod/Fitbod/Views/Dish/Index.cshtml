@model IEnumerable<Fitbod.Models.Dish>

@{
    ViewData["Title"] = "Index";
}

<h1>Retter</h1>

<p>
    <a asp-action="Create">Lav en ny ret</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayName("Navn")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DishId">Ændre</a> |
                <a asp-action="Delete" asp-route-id="@item.DishId">Slet</a>
            </td>
        </tr>
    }
    </tbody>
</table>
