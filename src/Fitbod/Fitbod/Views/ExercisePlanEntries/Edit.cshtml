@using Fitbod.Data
@model Fitbod.Models.ExercisePlanEntry

@{
    ViewData["Title"] = "Edit";
}

<h4>Øvelseinfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="ExercisePlans" asp-action="EntryEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EntryId" />
            <div class="form-group">
                <label asp-for="Repetitions" class="control-label"></label>
                <input asp-for="Repetitions" class="form-control" />
                <span asp-validation-for="Repetitions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sets" class="control-label"></label>
                <input asp-for="Sets" class="form-control" />
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label">Dag</label>
                <select asp-for="Day" class="form-control" asp-items="Html.GetEnumSelectList<WeekDayEnum>()"></select>
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ExerciseId" />
            <input type="hidden" asp-for="ExercisePlanId" />
            <br/>
            <div class="form-group">
                <input type="submit" value="Gem" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ExercisePlans" asp-action="EntryIndex" asp-route-id="@Model?.ExercisePlanId">Tilbage til Oversigt</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
