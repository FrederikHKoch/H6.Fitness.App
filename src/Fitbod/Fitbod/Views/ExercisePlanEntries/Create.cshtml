@using Fitbod.Data
@model Fitbod.Models.ExercisePlanEntry

@{
    ViewData["Title"] = "Create";
}

<h1>Opret</h1>

<h4>Øvelse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="ExercisePlans" asp-action="EntryCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Repetitions" class="control-label"></label>
                <input asp-for="Repetitions" class="form-control" />
                <span asp-validation-for="Repetitions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sets" class="control-label"></label>
                <input asp-for="Sets" class="form-control" />
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label">Dag</label>
                <select asp-for="Day" class="form-control" asp-items="Html.GetEnumSelectList<WeekDayEnum>()"></select>
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExerciseId" class="control-label">Øvelse</label>
                <select asp-for="ExerciseId" class="form-control" asp-items="ViewBag.ExerciseId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Gem Øvelse" class="btn btn-success btn-sm" />
            </div>
            <br/>
            <div>
                <a class="btn btn-primary btn-sm" asp-action="Index">Tilbage til Planoversigt</a>
            </div>
            <div type="hidden" class="form-group invisible">
                <label asp-for="ExercisePlanId" class="control-label"></label>
                <select asp-for="ExercisePlanId" class="form-control " asp-items="ViewBag.ExercisePlanId"></select>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
